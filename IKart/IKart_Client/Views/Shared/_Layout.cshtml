<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <style>

        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #fff6fb, #f4ebff); /* soft pastel pink → lavender */

            color: #333;
            margin: 0;
            padding-top: 70px; /* space for navbar */
        }

        /* Navbar styling */

        .navbar-inverse {
            background: linear-gradient(90deg, #fbcfe8, #d8b4fe);
            border: none;
            border-radius: 0;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

            .navbar-inverse .navbar-brand {
                color: #6b2a6c;
                font-weight: 600;
                transition: color 0.2s ease;
            }

                .navbar-inverse .navbar-brand:hover {
                    color: #000;
                }

            .navbar-inverse .navbar-nav > li > a {
                color: #6b2a6c;
                transition: all 0.2s ease;
            }

                .navbar-inverse .navbar-nav > li > a:hover {
                    color: #000;
                    background: rgba(255, 192, 203, 0.15);
                    border-radius: 6px;
                }

        /* Body content */

        .body-content {
            max-width: 960px;
            margin: 30px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(0,0,0,0.08);
            border: 1px solid #f3e8ff;
        }

        footer {
            text-align: center;
            font-size: 12px;
            color: #555;
            margin-top: 30px;
            padding: 10px 0;
            background: transparent;
        }

        hr {
            border-color: #f3e8ff;
        }

        /* Navbar toggle for mobile */

        .navbar-toggle .icon-bar {
            background-color: #6b2a6c;
        }
    </style>

    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @Html.ActionLink("IKart Application", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- Add nav items here if needed -->
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - IKart.com</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
