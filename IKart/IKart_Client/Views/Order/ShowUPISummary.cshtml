@{
    ViewBag.Title = "UPI Payment Summary";
}

<h2>UPI Payment Summary</h2>

<div>
    <p><strong>Product:</strong> @ViewBag.Product.ProductName</p>
    <p><strong>Cost:</strong> ₹@ViewBag.Product.Cost</p>
    <p><strong>Platform Fee:</strong> ₹@ViewBag.PlatformFee</p>
    <p><strong>Processing Fee:</strong> ₹@ViewBag.ProcessingFee</p>
    <p><strong>Total:</strong> ₹(@ViewBag.Product.Cost + ViewBag.PlatformFee + ViewBag.ProcessingFee)</p>

    <form asp-action="PlaceOrder" method="post">
        <input type="hidden" name="productId" value="@ViewBag.ProductId" />
        <input type="hidden" name="addressId" value="@ViewBag.AddressId" />
        <input type="hidden" name="userId" value="@ViewBag.UserId" />
        <input type="hidden" name="method" value="@ViewBag.Method" />

        <button type="submit" class="btn btn-success">Confirm Payment</button>
    </form>
</div>
