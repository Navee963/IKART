@model IKart_Shared.DTOs.FAQDto
@{ ViewBag.Title = "Edit FAQ"; }

<h3>Edit FAQ</h3>

@if (Model != null)
{
    using (Html.BeginForm())
    {
@Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.FaqId)
                                        @Html.HiddenFor(m => m.ProductId)

                                                            <div class="form-group">
                                                                @Html.LabelFor(m => m.Question)
                                                                @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
                                                            </div>
                                                                                <div class="form-group">
                                                                                    @Html.LabelFor(m => m.Answer)
                                                                                    @Html.TextAreaFor(m => m.Answer, new { @class = "form-control", rows = 4 })
                                                                                </div>
                                                                                                    <button type="submit" class="btn btn-success">Update FAQ</button> }
                                                                                                                }
                                                                                                                else
                                                                                                                {
                                                                                                    <p class="text-danger">FAQ not found.</p>}

