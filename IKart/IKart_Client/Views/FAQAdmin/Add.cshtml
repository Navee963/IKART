@model IKart_Shared.DTOs.FAQDto
@{ ViewBag.Title = "Add FAQ"; }

<h3>Add FAQ for Product ID: @Model.ProductId</h3>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.ProductId)
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Question)
                                    @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(m => m.Answer)
                                                    @Html.TextAreaFor(m => m.Answer, new { @class = "form-control", rows = 4 })
                                                </div>
                                                                <button type="submit" class="btn btn-success">Add FAQ</button>}
