@model IKart_Shared.DTOs.EMI_Card.CardRequestDto

@{
                Layout = "~/Views/Shared/_UserLayout.cshtml";

}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Choose Your EMI Card</h2>

    @using (Html.BeginForm("RequestCard", "EMICards", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {

        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="row mb-4">
                            <div class="col-md-4">
                                <div class="card text-center p-3 shadow-sm h-100">
                                    <h3 class="text-warning">Gold</h3>
                                    <p>Limit: ₹25,000</p>
                                    <p>Joining Fee: ₹1,000</p>
                                    <div class="form-check">

                                        @Html.RadioButtonFor(m => m.CardType, "Gold", new { @class = "form-check-input" })
                                        <label class="form-check-label">Select</label>
                                    </div>

                                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card text-center p-3 shadow-sm h-100">
                                    <h3 class="text-info">Diamond</h3>
                                    <p>Limit: ₹50,000</p>
                                    <p>Joining Fee: ₹2,000</p>
                                    <div class="form-check">

                                        @Html.RadioButtonFor(m => m.CardType, "Diamond", new { @class = "form-check-input" })
                                        <label class="form-check-label">Select</label>
                                    </div>

                                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="card text-center p-3 shadow-sm h-100">
                                    <h3 class="text-secondary">Platinum</h3>
                                    <p>Limit: ₹1,00,000</p>
                                    <p>Joining Fee: ₹3,000</p>
                                    <div class="form-check">

                                        @Html.RadioButtonFor(m => m.CardType, "Platinum", new { @class = "form-check-input" })
                                        <label class="form-check-label">Select</label>
                                    </div>

                                    @Html.ValidationMessageFor(m => m.CardType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                                        <hr />

                                                        <h4 class="text-primary mb-3">Provide Documents</h4>
                                                                        <div class="row g-3">
                                                                            <div class="col-md-6">

                                                                                @Html.LabelFor(m => m.BankName)

                                                                                @Html.TextBoxFor(m => m.BankName, new { @class = "form-control" })

                                                                                @Html.ValidationMessageFor(m => m.BankName, "", new { @class = "text-danger" })
                                                                            </div>

                                                                            <div class="col-md-6">

                                                                                @Html.LabelFor(m => m.AccountNumber)

                                                                                @Html.TextBoxFor(m => m.AccountNumber, new { @class = "form-control" })

                                                                                @Html.ValidationMessageFor(m => m.AccountNumber, "", new { @class = "text-danger" })
                                                                            </div>

                                                                            <div class="col-md-6">

                                                                                @Html.LabelFor(m => m.IFSC_Code)

                                                                                @Html.TextBoxFor(m => m.IFSC_Code, new { @class = "form-control" })

                                                                                @Html.ValidationMessageFor(m => m.IFSC_Code, "", new { @class = "text-danger" })
                                                                            </div>

                                                                            <div class="col-md-6">

                                                                                @Html.LabelFor(m => m.AadhaarNumber)

                                                                                @Html.TextBoxFor(m => m.AadhaarNumber, new { @class = "form-control" })

                                                                                @Html.ValidationMessageFor(m => m.AadhaarNumber, "", new { @class = "text-danger" })
                                                                            </div>
                                                                        </div>

                                                                                        <hr />

                                                                                                        <h4 class="text-primary mb-3">Upload Documents</h4>
                                                                                                                        <div class="row g-3">
                                                                                                                            <div class="col-md-4">
                                                                                                                                <label>Aadhaar Card</label>
                                                                                                                                <input type="file" name="Aadhaar" class="form-control" required />
                                                                                                                            </div>
                                                                                                                            <div class="col-md-4">
                                                                                                                                <label>PAN Card</label>
                                                                                                                                <input type="file" name="PAN" class="form-control" required />
                                                                                                                            </div>
                                                                                                                            <div class="col-md-4">
                                                                                                                                <label>Bank Book Front Page</label>
                                                                                                                                <input type="file" name="BankBook" class="form-control" required />
                                                                                                                            </div>
                                                                                                                        </div>

                                                                                                                                        <hr />

                                                                                                                                                        <h4 class="text-primary mb-3">Pay Joining Fee</h4>
                                                                                                                                                                        <p>After filling this form and uploading documents, you will be redirected to pay the joining fee.</p>

                                                                                                                                                                                        <div class="text-center mt-3">
                                                                                                                                                                                            <button type="submit" class="btn btn-success">Proceed to Payment</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                                                                                                                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                                                                                                                                                                            <a href="@Url.Action("Index", "EMICards")" class="btn btn-secondary me-2">Back</a>
                                                                                                                                                                                        </div>
                                                                                                                                                                                                    }
</div>

<style>

    .card h3 {
        font-weight: 600;
    }

    .card {
        border-radius: 12px;
        border: 1px solid #e0e0e0;
    }
</style>

