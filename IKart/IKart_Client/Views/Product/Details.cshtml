@model IKart_Shared.DTOs.ProductDto
@{ Layout = "~/Views/Shared/_UserLayout.cshtml"; }

<h2>@Model.ProductName</h2>
<img src="@Model.ProductImage" alt="@Model.ProductName" style="width:300px;" />
<p><strong>Price:</strong> ₹@Model.Cost</p>
<p><strong>Description:</strong> @Model.ProductDetails</p>

<form method="post" action="/Order/BuyNow">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <button type="submit">Buy Now</button>
</form>

<a href="@Url.Action("ProductFAQs", "FAQ", new { productId = Model.ProductId })"
   class="btn btn-info">View FAQs</a>