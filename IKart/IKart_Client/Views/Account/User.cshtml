@model IKart_Shared.DTOs.UserDto

@{
    ViewBag.Title = "User Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>User Profile</h2>

@using (Html.BeginForm("User", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(m => m.UserId)

    <div class="form-group">
        @Html.LabelFor(m => m.FullName, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PhoneNo, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.PhoneNo, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <button type="submit" class="btn btn-primary">Update Profile</button>
            @Html.ActionLink("Manage Addresses", "Addresses", "Account", new { userId = Model.UserId }, new { @class = "btn btn-link" })
        </div>
    </div>
}
