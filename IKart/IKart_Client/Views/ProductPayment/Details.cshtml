@model IKart_Shared.DTOs.Payment.UserPaymentDto

@{
    ViewBag.Title = "Payment Details";
}

<h2>Payment Details</h2>

<p><strong>Payment ID:</strong> @Model.PaymentId</p>
<p><strong>Product:</strong> @Model.ProductName</p>
<p><strong>Card Type:</strong> @Model.CardType</p>
<p><strong>Total Amount:</strong> ₹@Model.TotalAmount</p>
<p><strong>Payment Date:</strong> @Model.PaymentDate.ToShortDateString()</p>
<p><strong>Status:</strong> @Model.Status</p>

@if (Model.TenureMonths > 1)
{
    <h3>EMI Details</h3>
    <p><strong>Tenure:</strong> @Model.TenureMonths months</p>
    <p><strong>Monthly EMI:</strong> ₹@Model.EMIAmount</p>

    <h4>Installments</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Installment ID</th>
                <th>Due Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Penalty</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inst in Model.Installments)
            {
                <tr>
                    <td>@inst.InstallmentId</td>
                    <td>@inst.DueDate.ToShortDateString()</td>
                    <td>₹@inst.Amount</td>
                    <td>@(inst.IsPaid ? "Paid" : "Pending")</td>
                    <td>
                        @if (inst.Penalty != null)
                        {
                            <span>@inst.Penalty.PenaltyAmount (Days overdue: @inst.Penalty.Days_Overdue)</span>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>
                        @if (!inst.IsPaid)
                        {
                            <form asp-action="PayInstallment" method="post" style="display:inline;">
                                <input type="hidden" name="installmentId" value="@inst.InstallmentId" />
                                <input type="hidden" name="paymentId" value="@Model.PaymentId" />
                                <button type="submit" class="btn btn-success btn-sm">Pay</button>
                            </form>
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
