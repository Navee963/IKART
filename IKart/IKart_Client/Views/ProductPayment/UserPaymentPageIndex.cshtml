@model List<IKart_Shared.DTOs.Payment.UserPaymentDto>
@*@model List<IKart_Shared.DTOs.EMI_Card.PaymentDto>*@

@{ ViewBag.Title = "My Payments"; }

<h2>My Payments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Card</th>
            <th>Total</th>
            <th>EMI</th>
            <th>Status</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
<tr>
    <td>@p.ProductName</td>
    <td>@p.CardType</td>
    <td>₹@p.TotalAmount</td>
    <td>₹@p.EMIAmount × @p.TenureMonths</td>
    <td>@p.Status</td>
    <td>@p.PaymentDate.ToShortDateString()</td>
    <td>
        <a href="@Url.Action("Details", "ProductPayment", new { paymentId = p.PaymentId })" class="btn btn-sm btn-info">View</a>
    </td>
</tr>}
    </tbody>
</table>